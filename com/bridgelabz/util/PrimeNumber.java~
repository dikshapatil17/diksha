/* PACKAGE NAMING STYLE */
package com.bridgelabz.util;

/* IMPORT STATEMENtS */
import java.util.Scanner;
 
/* CLASS DECLARATION STYLE */
class PrimeNumber{
   public static void main(String args[]){
 
       int mNum,mInputNumber;

       Scanner sc=new Scanner(System.in);

        System.out.println("enter a number");
          mInputNumber=sc.nextInt();

            for(mNum=2;mNum<=mInputNumber;mNum++)
               if(mInputNumber==0) || (mInputNumber==1){
                  System.out.println("entered number"+mInputNumber+" not a prime number"); 
                    }           
      
                if(mNum%2==0)
             {
               System.out.println("entered number"+mInputNumber+" not a prime number");
                break;
             }
        else
             {
             System.out.println("entered number "+mInputNumber+"it is prime number");
break;
            }
        }
   }
}

