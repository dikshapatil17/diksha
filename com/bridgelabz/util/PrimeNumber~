import java.util.Scanner;
 class PrimeNumber{
   public static void main(String args[]){
 /*
 * JAVA STYLE GUIDE - n and i are initializing by datatype integer
 */
      int n,i;
/*
 * JAVA STYLE GUIDE -
 */
       Scanner sc=new Scanner(System.in);

        System.out.println("enter a number");
          n=sc.nextInt();

            for(i=2;i<=n;i++)

       {
              if(n%2==0)
             {
               System.out.println("entered number"+n+" not a prime number");
                break;
             }
        else
             {
             System.out.println("entered number "+n+"it is prime number");
break;
            }
        }
   }
}

